//hallow right angle pattern
#include <stdio.h>
int main()
{
    int row;
    printf("please enter no.of rows:");
    scanf("%d",&row);
    for(int i=1;i<=row;i++)
    {
        for(int j=1;j<=i;j++)
        {
            if(j==1||i==row||j==i)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }

}
