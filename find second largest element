//find second largest element
#include<stdio.h>
int main()
{
    int size,max1,max2;
    printf("Please enter the size of an array:");
    scanf("%d",&size);
    int arr[size];
    printf("please enter the elements into array:");
    for(int i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);//1 2 3 4 5
    }
    if(arr[0]>arr[1])
    {
        max1=arr[0];//2
        max2=arr[1];//1
    }
    else
    {
        max1=arr[1];
        max2=arr[0];
    }
    for(int i=2;i<size;i++)
    {
        if(arr[i]>max1)
        {
            max2=max1;//2
            max1=arr[i];//3

        }
        else if(arr[i]<max1&&arr[i]>max2)
        {
            max2=arr[i];
        }
    }
    printf("The second largest element:%d",max2);
}
